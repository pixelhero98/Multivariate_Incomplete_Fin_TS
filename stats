mu_norm = encode_mu_norm(vae, y_in, use_ewma=..., ewma_lambda=..., mu_mean=mu_mean, mu_std=mu_std)
m = mu_norm.mean(dim=(0,1))           # [Z]
s = mu_norm.std (dim=(0,1))           # [Z]
print("max|mean|:", m.abs().max().item(), " mean(std):", s.mean().item())
# Expect max|mean| ≲ 0.05 and mean(std) ≈ 1.0

